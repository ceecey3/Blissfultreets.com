<script>
// Toggle between credit card and mobile money fields
document.getElementById('card').addEventListener('change', function() {
  document.getElementById('card-info').style.display = 'block';
  document.getElementById('mobile-info').style.display = 'none';
});
document.getElementById('mobile').addEventListener('change', function() {
  document.getElementById('card-info').style.display = 'none';
  document.getElementById('mobile-info').style.display = 'block';
});
</script>
